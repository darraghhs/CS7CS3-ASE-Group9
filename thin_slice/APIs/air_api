import requests

def get_current_location():
    """Get your current location"""
    try:
        response = requests.get("http://ip-api.com/json/")
        data = response.json()
        return {
            "latitude": data["lat"],
            "longitude": data["lon"],
            "city": data["city"]
        }
    except:
        return {
            "latitude": 53.3498,
            "longitude": -6.2603,
            "city": "Dublin"
        }


def get_air_quality(latitude, longitude):
    """
    Fetch air quality and emissions data using Open-Meteo API (completely free, no key needed).
    Returns: PM2.5, PM10, NO2, CO, O3, and other pollutants
    """
    url = "https://air-quality-api.open-meteo.com/v1/air-quality"
    
    params = {
        "latitude": latitude,
        "longitude": longitude,
        "current": "pm2_5,pm10,nitrogen_dioxide,carbon_monoxide,ozone,sulphur_dioxide,european_aqi"
    }
    
    try:
        print("ğŸ“¡ Fetching air quality data...\n")
        response = requests.get(url, params=params)
        response.raise_for_status()
        return response.json()
    
    except requests.exceptions.RequestException as e:
        print(f"âŒ Error fetching air quality: {e}")
        return None


def get_aqi_level(aqi_value):
    """Interpret AQI level"""
    if aqi_value <= 25:
        return "Good", "âœ“"
    elif aqi_value <= 50:
        return "Fair", "âš ï¸"
    elif aqi_value <= 75:
        return "Moderate", "âš ï¸"
    elif aqi_value <= 100:
        return "Poor", "âŒ"
    else:
        return "Very Poor", "ğŸš¨"


def display_air_quality(location, air_data):
    """Display air quality information"""
    
    if not air_data or "current" not in air_data:
        print("âŒ Could not fetch air quality data")
        return
    
    current = air_data["current"]
    
    print("\n" + "="*80)
    print(f"ğŸŒ AIR QUALITY & EMISSIONS DATA - {location['city'].upper()}")
    print("="*80)
    print(f"ğŸ“ Location: {location['latitude']:.4f}, {location['longitude']:.4f}\n")
    
    # European AQI
    aqi_value = current.get("european_aqi", 0)
    aqi_level, aqi_icon = get_aqi_level(aqi_value)
    
    print(f"ğŸ“Š EUROPEAN AIR QUALITY INDEX (AQI)")
    print(f"   {aqi_icon} AQI Level: {aqi_level} ({aqi_value})\n")
    
    # Particulate Matter
    print(f"ğŸ’¨ PARTICULATE MATTER (PM)")
    pm25 = current.get("pm2_5", 0)
    pm10 = current.get("pm10", 0)
    print(f"   PM2.5 (fine): {pm25:.1f} Âµg/mÂ³")
    print(f"   PM10 (coarse): {pm10:.1f} Âµg/mÂ³")
    if pm25 <= 12:
        print(f"   âœ“ PM2.5 within WHO guidelines (< 12 Âµg/mÂ³)")
    else:
        print(f"   âš ï¸  PM2.5 above WHO guidelines (> 12 Âµg/mÂ³)\n")
    
    # Gaseous Pollutants
    print(f"\nğŸ­ GASEOUS POLLUTANTS (EMISSIONS)")
    no2 = current.get("nitrogen_dioxide", 0)
    co = current.get("carbon_monoxide", 0)
    o3 = current.get("ozone", 0)
    so2 = current.get("sulphur_dioxide", 0)
    
    print(f"   NOâ‚‚ (Nitrogen Dioxide): {no2:.1f} Âµg/mÂ³")
    print(f"   CO (Carbon Monoxide): {co:.1f} Âµg/mÂ³")
    print(f"   Oâ‚ƒ (Ozone): {o3:.1f} Âµg/mÂ³")
    print(f"   SOâ‚‚ (Sulphur Dioxide): {so2:.1f} Âµg/mÂ³")
    
    # Health Recommendations
    print(f"\nğŸ¥ HEALTH RECOMMENDATIONS")
    if aqi_level == "Good":
        print(f"   âœ“ Air quality is satisfactory - enjoy outdoor activities")
    elif aqi_level == "Fair":
        print(f"   âš ï¸  Air quality is acceptable - sensitive groups may experience minor effects")
    elif aqi_level == "Moderate":
        print(f"   âš ï¸  Air quality is unhealthy for sensitive groups")
        print(f"      â€¢ Limit outdoor activities for children, elderly, and those with respiratory conditions")
    elif aqi_level == "Poor":
        print(f"   âŒ Air quality is unhealthy for the general population")
        print(f"      â€¢ Everyone should limit prolonged outdoor activities")
    else:
        print(f"   ğŸš¨ Air quality is hazardous")
        print(f"      â€¢ Avoid outdoor activities")
    
    print("\n" + "="*80 + "\n")




# Main execution
if __name__ == "__main__":
    print("\n" + "â–ˆ"*80)
    print("â–ˆ AIR QUALITY & EMISSIONS TRACKER")
    print("â–ˆ Dublin Air Pollution Monitoring")
    print("â–ˆ Data from Open-Meteo (Free, No API Key Required)")
    print("â–ˆ"*80 + "\n")
    
    # Get location
    print("ğŸŒ Getting your location...\n")
    location = get_current_location()
    print(f"ğŸ“ Location: {location['city']}")
    print(f"   GPS: {location['latitude']:.4f}, {location['longitude']:.4f}\n")
    
    # Fetch air quality data
    air_data = get_air_quality(location["latitude"], location["longitude"])
    
    # Display results
    if air_data:
        display_air_quality(location, air_data)
        print("âœ“ Air quality data successfully fetched\n")
    else:
        print("âŒ Failed to fetch air quality data\n")
        